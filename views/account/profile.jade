extends ../layout

block content
  .container
        if messages.success
          .alert.alert-success(role='alert')
            for success in messages.success
              div= success.msg
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form.form-style-9(method='POST', action='/account?_method=PUT')
          legend Informations
          br
          .form-group
            label.col-sm-3(for='email') Email
            .col-sm-7
              input.form-control(type='email', name='email', id='email', value=user.email)
          br
          .form-group
            label.col-sm-3(for='name') Nom
            .col-sm-7
              input.form-control(type='text', name='name', id='name', value=user.name)
          br
          .form-group
            label.col-sm-3 Genre
            .col-sm-4
              label.radio-inline.radio.col-sm-4
                input(type='radio', checked=(user.gender == 'male'), name='gender', value='male', data-toggle='radio')
                span Homme
              label.radio-inline.col-sm-4
                input(type='radio', checked=(user.gender == 'female'), name='gender', value='female', data-toggle='radio')
                span Femme
          br
          .form-group
            label.col-sm-3(for='location') Localisation
            .col-sm-7
              input.form-control(type='text', name='location', id='location', value=user.location)
          br
          .form-group
            label.col-sm-3(for='website') Site internet
            .col-sm-7
              input.form-control(type='text', name='website', id='website', value=user.website)
          br
          .form-group
            label.col-sm-3 Gravatar
            .col-sm-4
              img(src=user.gravatar, class='profile', width='100', height='100')
          br
          .form-group
            .col-sm-offset-3.col-sm-4
              button.btn.btn-success(type='submit') Mettre à jour profil

    .panel
      .panel-body
        form.form-style-9(method='POST', action='/account?_method=PUT')
          legend Changer mot de passe
          br
          .form-group
            label.col-sm-3(for='password') Nouveau mot de passe
            .col-sm-7
              input.form-control(type='password', name='password', id='password')
          br
          .form-group
            label.col-sm-3(for='confirm') Confirmer mot de passe
            .col-sm-7
              input.form-control(type='password', name='confirm', id='confirm')
          br
          .form-group
            .col-sm-4.col-sm-offset-3
              button.btn.btn-success(type='submit') Changer mot de passe

    .panel
      .panel-body
        form.form-style-9(method='POST', action='/account?_method=DELETE')
          legend Supprimer compte
          br
          .form-group
            p.col-sm-offset-3.col-sm-9 Vous pouvez supprimer votre compte, mais gardez à l'esprit que cette action est irréversible.
            .col-sm-offset-3.col-sm-9
              button.btn.btn-danger(type='submit') Supprimer mon compte
