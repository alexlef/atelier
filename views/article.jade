extends layout

block content
  - var i = 0
  - each result in tabitem
    div.art
      div.a
        - each res in tabimg
          if res.id_item == result.attributes.id
            img.i(src='img/'+res.nom)
      ul.liste
        li=result.attributes.nom
        li='Prix : '+result.attributes.tarif+'â‚¬'
        a.lien(href=result.attributes.url)
          li='Acheter en magasin'
        li=result.attributes.desc
      form.ajout(method='POST', action='/addarticle')
        input(type='hidden', name='id', value=result.attributes.id)
        input(type='hidden', name='idliste', value=idliste)
        input.adj.inp(type='submit')
      if i < 7
        - i += 1
